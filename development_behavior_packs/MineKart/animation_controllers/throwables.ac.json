            }
          ],
          "on_entry": [
            "@s minekart:throw_spiny_shell",
            "/clear @s minekart:spiny_shell -1 1"
          ]
        }
      }
    },
    "controller.animation.player.star": {
      "states": {
        "default": {
          "transitions": [
            {
